<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/base_template_txt"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="BASE 2"
        app:layout_constraintTop_toTopOf="@id/base_template_number"
        app:layout_constraintBottom_toBottomOf="@id/base_template_number"
        app:layout_constraintRight_toLeftOf="@id/base_template_number"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@android:color/white"
        android:background="@drawable/text_view_background"
        android:layout_marginStart="5dp"
        android:padding="10dp"/>

    <EditText
        android:id="@+id/base_template_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/base_template_txt"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:background="@drawable/edit_text_background" />

</android.support.constraint.ConstraintLayout>