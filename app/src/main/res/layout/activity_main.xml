<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_weight="15"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/bin_base_txt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="BIN"
                android:textColor="@android:color/white"
                android:background="@drawable/text_view_background"
                android:layout_marginStart="5dp"
                android:padding="10dp"/>
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_weight="85"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/bin_base_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                android:hint="BASE 2"
                android:singleLine="true"
                android:background="@drawable/edit_text_background" />
        </android.support.constraint.ConstraintLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_weight="15"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/oct_base_txt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="OCT"
                android:textColor="@android:color/white"
                android:background="@drawable/text_view_background"
                android:layout_marginStart="5dp"
                android:padding="10dp"/>

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_weight="85"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/oct_base_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                android:hint="BASE 8"
                android:singleLine="true"
                android:background="@drawable/edit_text_background" />

        </android.support.constraint.ConstraintLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_weight="15"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/dec_base_txt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="DEC"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textColor="@android:color/white"
                android:background="@drawable/text_view_background"
                android:layout_marginStart="5dp"
                android:padding="10dp"/>

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_weight="85"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/dec_base_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                android:hint="BASE 10"
                android:singleLine="true"
                android:background="@drawable/edit_text_background" />

        </android.support.constraint.ConstraintLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_weight="15"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/hex_base_txt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="HEX"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textColor="@android:color/white"
                android:background="@drawable/text_view_background"
                android:layout_marginStart="5dp"
                android:padding="10dp"/>

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_weight="85"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/hex_base_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                android:hint="BASE 16"
                android:singleLine="true"
                android:background="@drawable/edit_text_background" />

        </android.support.constraint.ConstraintLayout>
    </LinearLayout>

</android.widget.LinearLayout>